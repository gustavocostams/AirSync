<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.example.gustavo.airsync.MainActivity">

    <Button
        android:id="@+id/btn_Bluetooth"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bluetooth_off" />

    <LinearLayout
        android:id="@+id/layout_roda_individual"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/layout_dianteira"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Dianteira" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E" />

                    <ImageButton
                        android:id="@+id/F_E_Up"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/n_up" />

                    <Button
                        android:id="@+id/F_E_Down"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/n_down" />

                    <Button
                        android:id="@+id/F_allUp"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/n_all_up" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D" />

                    <Button
                        android:id="@+id/F_D_Up"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/n_up" />

                    <Button
                        android:id="@+id/F_D_Down"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/n_down" />

                    <Button
                        android:id="@+id/F_allDown"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/n_all_down" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_trazeira"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Trazeira" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E" />

                    <Button
                        android:id="@+id/T_E_Up"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/n_up" />

                    <Button
                        android:id="@+id/T_E_Down"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/n_down" />

                    <Button
                        android:id="@+id/T_allUp"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/n_all_up" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D" />

                    <Button
                        android:id="@+id/T_D_Up"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/n_up" />

                    <Button
                        android:id="@+id/T_D_Down"
                        android:layout_width="70dp"
                        android:layout_height="80dp"
                        android:background="@drawable/n_down" />

                    <Button
                        android:id="@+id/T_allDown"
                        android:layout_width="80dp"
                        android:layout_height="40dp"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/n_all_down" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/controle_total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Controle Laterais" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal">

            <Button
                android:id="@+id/E_allUp"
                android:layout_width="50dp"
                android:layout_height="110dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/n_all_left_up" />

            <Button
                android:id="@+id/allUp"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:background="@drawable/n_all_up" />

            <Button
                android:id="@+id/D_allUp"
                android:layout_width="50dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/n_all_left_up" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/E_allDown"
                android:layout_width="50dp"
                android:layout_height="110dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/n_all_left_down" />

            <Button
                android:id="@+id/allDown"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:background="@drawable/n_all_down" />

            <Button
                android:id="@+id/D_allDown"
                android:layout_width="50dp"
                android:layout_height="110dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/n_all_left_down" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>